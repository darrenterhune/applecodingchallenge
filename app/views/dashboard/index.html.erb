<%= turbo_frame_tag('search_form') do %>
	<div class="grid grid-cols-1 gap-4">
		<%= form_with(url: '/', method: :post, class: "flex items-center gap-2") do |form| %>
			<%= form.text_field(:search, placeholder: "Enter your search term...", class: "search-input") %>
			<%= form.submit("Search", class: "search-btn") %>
		<% end %>
	</div>
<% end %>
<%= turbo_frame_tag('search_results') %>