<%= form_with(url: geocode_path, method: :post, class: "flex items-center gap-2") do |form| %>
	<%= text_field_tag(:search, params[:search], placeholder: "Enter your search term...", class: "search-input") %>
	<%= form.submit("Search", class: "search-btn", data: { turbo_submits_with: "Searching..." }) %>
<% end %>